<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Este ImageView debe existir EXACTAMENTE con este id -->
        <ImageView
            android:id="@+id/imgCarousel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Y estos TextView también -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la promoción"
            android:textStyle="bold"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/2025 al 15/01/2025"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descuento: 20%"
            android:textSize="12sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
