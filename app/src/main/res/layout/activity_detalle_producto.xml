<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetalleProducto">

    <!-- ╔════  CARRUSEL PRINCIPAL  ════╗ -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="16:9" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPagerImages" />

    <!-- ╔════  CONTENIDO CON SCROLL  ════╗ -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dotsIndicator"
        app:layout_constraintBottom_toTopOf="@id/btnScanAgain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ───── Datos del perfume ───── -->
            <TextView
                android:id="@+id/labelMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Marca"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMarcaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(marca del perfume)" />

            <TextView
                android:id="@+id/labelNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombreDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(nombre del perfume)" />

            <TextView
                android:id="@+id/labelPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Precio"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrecioDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(precio)" />

            <!-- ───── Tamaño ───── -->
            <TextView
                android:id="@+id/labelTamano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tamaño"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTamanoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <!-- ───── Descripción ───── -->
            <TextView
                android:id="@+id/labelDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descripción"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescripcionDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="(descripción del perfume seleccionado)" />

            <!-- ───── BOTÓN AÑADIR AL CARRITO MOVIDO AQUÍ ───── -->
            <Button
                android:id="@+id/btnAddCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir al Carrito"
                android:layout_marginBottom="24dp" />

            <!-- ───── Perfumes recomendados ───── -->
            <TextView
                android:id="@+id/labelSimilares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Perfumes recomendados similares"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/carouselFinal"
                    android:layout_width="0dp"
                    android:layout_height="260dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btnFinalLeftArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Anterior"
                    android:src="@drawable/ic_left_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/carouselFinal"
                    app:layout_constraintBottom_toBottomOf="@id/carouselFinal" />

                <ImageButton
                    android:id="@+id/btnFinalRightArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Siguiente"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/carouselFinal"
                    app:layout_constraintBottom_toBottomOf="@id/carouselFinal" />

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotsIndicatorFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/carouselFinal" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ╔════  BOTÓN ESCANEAR OTRO CÓDIGO  ════╗ -->
    <ImageButton
        android:id="@+id/btnScanAgain"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:src="@drawable/icon_barra"
        android:backgroundTint="?attr/colorPrimary"
        android:contentDescription="Escanear otro código"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
