<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- AppBar con Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Aquí tu ScrollView original -->
        <ScrollView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Usuario -->
                <EditText
                    android:id="@+id/etUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Usuario" />

                <!-- Clave -->
                <EditText
                    android:id="@+id/etClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Clave"
                    android:visibility="gone"
                    android:inputType="textPassword" />

                <!-- Nombre -->
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre" />

                <!-- Apellido -->
                <EditText
                    android:id="@+id/etApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido" />

                <!-- DNI -->
                <EditText
                    android:id="@+id/etDNI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DNI"
                    android:inputType="number" />

                <!-- Condición Frente al IVA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condición Frente al IVA" />

                <Spinner
                    android:id="@+id/spinnerCondicionIVA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/prompt_condicion_iva" />

                <!-- Fecha de Nacimiento -->
                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento (yyyy-MM-dd)"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true" />

                <!-- Celular -->
                <EditText
                    android:id="@+id/etCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Celular"
                    android:inputType="phone" />

                <!-- Email -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <!-- Spinner para País -->
                <Spinner
                    android:id="@+id/spinnerPais"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <!-- Spinner para Provincia -->
                <Spinner
                    android:id="@+id/spinnerProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <!-- Spinner para Localidad -->
                <Spinner
                    android:id="@+id/spinnerLocalidad"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <!-- Spinner para Calle -->
                <Spinner
                    android:id="@+id/spinnerCalle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <!-- Código Postal -->
                <EditText
                    android:id="@+id/etCodigoPostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Código Postal"
                    android:inputType="text" />

                <!-- Numeración de Calle -->
                <EditText
                    android:id="@+id/etNumeracionCalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numeración de Calle"
                    android:inputType="text" />

                <!-- Piso -->
                <EditText
                    android:id="@+id/etPiso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Piso"
                    android:inputType="number" />

                <!-- Departamento -->
                <EditText
                    android:id="@+id/etDepartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Departamento"
                    android:inputType="text" />

                <!-- Comentarios Domicilio -->
                <EditText
                    android:id="@+id/etComentarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comentarios Domicilio"
                    android:inputType="textMultiLine"
                    android:minLines="3" />

                <!-- Botón para guardar -->
                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:layout_marginTop="24dp" />

            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/beige"
            app:layout_anchor="@+id/appBarLayout"
            app:layout_anchorGravity="center"
            app:title=""
            app:titleTextColor="@color/black" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- PANEL LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>
