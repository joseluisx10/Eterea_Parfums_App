<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Filtro: Marca -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <Spinner
            android:id="@+id/spMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Filtro: Género -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Género"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/spGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Filtro: Tipo de Perfume -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Perfume"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/spTipoPerfume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Filtro: Familia Olfativa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Familia Olfativa"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <Spinner
            android:id="@+id/spFamiliaOlfativa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Filtro: Notas de Perfume (múltiple) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notas de Perfume"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <LinearLayout
            android:id="@+id/llNotasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Filtro: Precio Mínimo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Mínimo"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/etPrecioMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 100"
            android:inputType="numberDecimal"
            android:layout_marginTop="4dp" />

        <!-- Filtro: Precio Máximo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio Máximo"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/etPrecioMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 5000"
            android:inputType="numberDecimal"
            android:layout_marginTop="4dp" />

        <!-- Filtro: Tamaño Mínimo (ml) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño Mínimo (ml)"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/etTamanioMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 50"
            android:inputType="number"
            android:layout_marginTop="4dp" />

        <!-- Filtro: Tamaño Máximo (ml) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamaño Máximo (ml)"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/etTamanioMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 200"
            android:inputType="number"
            android:layout_marginTop="4dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnAplicarFiltros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aplicar Filtros" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnLimpiarFiltros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar Filtros" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>